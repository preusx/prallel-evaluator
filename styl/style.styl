font-size = 18px

color-background = #222
color-main = color-blue

transition-duration = .1s
shadow = 1px 1px 0 rgba(#000, 10%)

@import 'css-stem'

/**
 * Mixins
 * ======================================================================== */

canvas(color)
    border 2px solid lighten(color, 20%)

    background-color color
    background-image url(path-img+'grid-cell.png')
    background-repeat repeat
    background-position top left

/**
 * Font faces
 * ======================================================================== */

@font-face
    font-family: 'GostA';
    src: url(path-font+'gost-a/regular.eot?') format('eot'),\
         url(path-font+'gost-a/regular.woff') format('woff'),\
         url(path-font+'gost-a/regular.ttf')  format('truetype'),\
         url(path-font+'gost-a/regular.svg#gost-a') format('svg')



/**
 * Tags
 * ======================================================================== */

html
body
    height 100%
    width 100%
    overflow hidden

    font-family 'GostA', font-family
    font-weight font-bold
    text-transform uppercase


body
    padding 20px

    background-color color-background


/**
 * Classes
 * ======================================================================== */

.wrapper
    position relative
    height 100%
    margin auto

    // opacity .9999


.canvas
    width 100%
    height 100%
    overflow hidden

    border 2px solid lighten(color-background, 20%)

    & > svg
        canvas(color-background)

        border-width 0


.controls
    @extends .cf

    position absolute
    top 0
    right 0
    width auto
    height 43px
    margin-bottom -43px
    padding 4.5px 5px
    z-index 20

    line-height 35px

    canvas(color-main) 
    color #fff

    &__item
        float left


// ========================================================================

.button
.input
.delimiter
    &:first-child
        margin-left 0

    &:last-child
        margin-right 0


.button
.input
    position relative
    display inline-block
    padding 3px 10px
    margin-right 5px
    overflow hidden
    z-index 1

    font-family 'GostA', font-family
    font-weight font-bold
    text-transform uppercase
    line-height 20px
    vertical-align middle
    cursor pointer

    border 2px solid #fff

    background-color transparent
    color #fff
    transition color transition-duration linear

    &:focus
        outline none

.button
    &:before
        display block
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        z-index -1

        content ""

        background-color #fff
        transition transform transition-duration linear,\
            background transition-duration linear
        transform translate(0, -100%)

    &:hover
        color color-main

        &:before
            transform translate(0, 0)

    &:active
        // transform scale(.98)
        &:before
            background-color rgba(#fff, .8)

    & + .delimiter
        margin-left 5px


.input
    cursor: text

    &:before
        float left
        display inline-block
        margin-right 5px

        line-height inherit
        vertical-align middle
        content ">"

    & > input
        float left
        display inline-block
        padding 0
        margin 0

        font-family inherit
        font-size inherit
        font-weight inherit
        height 20px
        text-transform inherit
        vertical-align middle

        border 0 solid transparent

        background-color transparent
        color inherit

        &:focus
            outline none


.delimiter
    margin 0 10px
    height 30px
    display inline-block

    vertical-align middle

    border 0 solid transparent
    border-right 2px solid #fff




    